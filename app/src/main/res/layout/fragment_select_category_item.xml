<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/colorBackgroundAss"
              android:orientation="vertical"
             tools:context="com.example.mdjahirulislam.doobbi.view.makeMyOrder.SelectCategoryItemFragment">

    <!-- TODO: Update blank fragment layout -->


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="150dp">

        <ImageView
            android:id="@+id/fragment_selected_item_image_IV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/default_image"/>


        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:src="@drawable/price_tag"/>


            <TextView
                android:id="@+id/singleItemPriceTagTV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="6dp"
                android:paddingTop="0dp"
                android:text="TK. 08"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"
                android:textStyle="bold"/>
        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/fragment_selected_item_name_TV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Category"
        android:padding="@dimen/home_icon_margin"
        android:textSize="@dimen/large_text_size"
        />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/selected_category_list_view_RV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        />


</LinearLayout>
