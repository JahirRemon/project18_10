<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundAss"
    android:orientation="vertical"
    tools:context="com.example.mdjahirulislam.doobbi.view.schedule.ScheduleListActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/scheduleListRV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/scheduleListLoginTV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Please Login !!!"
        android:textSize="@dimen/large_text_size"
        android:textColor="@color/holo_red_light"
        android:onClick="clickOnLogin"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="@dimen/margin_4dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="90dp"
                android:background="@drawable/ic_bottom_shadow" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ic_shape_order_list" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/margin_16dp"
                android:paddingBottom="@dimen/margin_16dp"
                android:text="Your next Schedule is within \n2 hours 58 minutes"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/regular_text_size"
                android:textStyle="bold" />


        </RelativeLayout>


    </LinearLayout>


    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:onClick="goToAddScheduleActivity"
        android:src="@drawable/ic_add_white_36dp"
        app:backgroundTint="@color/colorMinus"
        app:borderWidth="0dp"
        app:elevation="6dp"
        app:fabSize="normal" />

</RelativeLayout>
