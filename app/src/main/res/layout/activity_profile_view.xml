                            android:drawableLeft="@drawable/ic_mail_outline_blue_400_24dp"
                            android:drawablePadding="6dp"
                            android:hint="Sample@gmail.com"
                            android:inputType="textEmailAddress"
                            android:textSize="@dimen/regular_text_size"
                            android:gravity="center_vertical"

                            />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/input_text_bottom_margin"
                        android:orientation="vertical"
                        >


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@color/colorRegBackgroundAss"
                            >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="@dimen/activity_vertical_margin"
                                android:paddingLeft="4dp"
                                app:srcCompat="@drawable/ic_map"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:gravity="center_vertical"
                                android:text="Address"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/regular_text_size"
                                android:textStyle="bold"

                                />


                        </LinearLayout>


                        <TextView
                            android:id="@+id/profileViewUserAreaTV"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:hint="Select Area"
                            android:inputType="textEmailAddress"
                            android:textSize="@dimen/regular_text_size"
                            android:gravity="center_vertical"

                            />


                        <TextView
                            android:id="@+id/profileViewUserFlatNo"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:hint="Flat No."
                            android:inputType="textEmailAddress"
                            android:textSize="@dimen/regular_text_size"
                            android:gravity="center_vertical"
                            />

                        <TextView
