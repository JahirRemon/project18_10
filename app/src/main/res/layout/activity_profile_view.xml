                    <RelativeLayout
                        android:id="@+id/smallMapLL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
