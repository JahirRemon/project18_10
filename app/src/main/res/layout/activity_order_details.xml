<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mdjahirulislam.doobbi.view.order.OrderDetailsActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/nav_header_vertical_spacing"
        android:orientation="horizontal"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/orderDetailsUserProfilePictureIV"
            android:layout_width="76dp"
            android:layout_height="96dp"
            android:layout_gravity="center|top"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:padding="0dp"
            android:src="@drawable/nobody"
            app:civ_border_color="#e6e6e6"
            app:civ_border_width="4dp"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/input_text_bottom_margin"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingRight="@dimen/margin_6dp"
                    android:src="@drawable/ic_perm_identity_grey_600_24dp"
                    android:textSize="@dimen/regular_text_size"/>

                <TextView
                    android:id="@+id/orderDetailsUserNameTV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:gravity="center|left"
                    android:maxLines="1"
                    android:hint=""
                    android:paddingRight="@dimen/margin_2dp"
                    android:textSize="@dimen/regular_text_size"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/input_text_bottom_margin"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:paddingRight="@dimen/margin_6dp"
                    android:src="@drawable/ic_smartphone_grey_600_24dp"/>

                <TextView
                    android:id="@+id/orderDetailsUserMobileTV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:gravity="center|left"
                    android:hint=""
                    android:paddingRight="@dimen/margin_2dp"
                    android:maxLines="1"
                    android:textSize="@dimen/regular_text_size"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/input_text_bottom_margin"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/margin_6dp"
                    android:src="@drawable/ic_home_grey_600_24dp"
                    android:textSize="@dimen/regular_text_size"/>

                <TextView
                    android:id="@+id/orderDetailsUserAddressTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:hint=""
                    android:paddingRight="@dimen/margin_2dp"
                    android:maxLines="3"
                    android:textSize="@dimen/regular_text_size"/>

            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:id="@+id/orderDetailsQRIV"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_2dp"
        android:background="@color/colorBackgroundAss"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/orderDetailsListRV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/orderSummaryYourBasketLL"
            android:visibility="visible">

        </android.support.v7.widget.RecyclerView>

        <TextView
            android:id="@+id/orderListNotFoundTV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="No Item Selected !!!"
            android:textColor="@color/holo_red_light"
            android:textStyle="bold"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/orderSummaryYourBasketLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorBackgroundAss"
                android:orientation="horizontal"
                >


                <TextView
                    android:id="@+id/orderDetailsTotalQuantityTV"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="left|center"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/activity_vertical_margin"
                    android:text="Total 00 Items,"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/regular_text_size"/>

                <TextView
                    android:id="@+id/orderDetailsTotalPriceTV"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="right|center"
                    android:maxLines="1"
                    android:paddingRight="@dimen/activity_vertical_margin"
                    android:text="Total Tk. 00 /="
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/regular_text_size"/>
            </LinearLayout>



        </LinearLayout>

    </RelativeLayout>

    <!--<include layout="@layout/single_oder_list_design"/>-->
    <!--<include layout="@layout/single_oder_list_design"/>-->


</LinearLayout>