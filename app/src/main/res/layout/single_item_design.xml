<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical"
    >

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="2dp"
        android:background="@color/colorBackgroundAss"
        android:elevation="4dp"
        app:cardElevation="6dp"
        app:cardPreventCornerOverlap="false"
        app:contentPadding="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="6dp"

            >

            <ImageView
                android:id="@+id/singleItemPosterImageIV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:src="@drawable/default_image"/>


            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentRight="true"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_margin="0dp"
                        android:padding="0dp"
                        android:src="@drawable/price_tag"/>


                    <TextView
                        android:id="@+id/singleItemPriceTagTV"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Tk.100.00"
                        android:gravity="center_vertical"
                        android:paddingLeft="6dp"
                        android:paddingTop="0dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp"
                        android:textStyle="bold"/>
                </RelativeLayout>
            </LinearLayout>


            <TextView
                android:id="@+id/singleItemDescriptionTV"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="0dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/item_background_transparent_gradient"
                android:gravity="center"
                android:text="I love you"
                android:textStyle="bold"
                android:textSize="@dimen/large_text_size"
                android:textColor="@color/colorWhite"/>





        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>