<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/margin_6dp"
        android:background="@color/colorUserCategory"
        >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:paddingBottom="4dp"
        android:text="@string/user_type"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/regular_text_size"

        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/input_text_bottom_margin"
        android:background="@color/colorWhite"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:orientation="horizontal"

        >

        <ImageView
            android:id="@+id/singlePlusIV"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/input_text_bottom_margin"
            android:background="@drawable/green_shape"
            android:gravity="center"
            android:padding="4dp"
            android:src="@drawable/ic_add_white_24dp"
            android:textColor="@color/colorWhite"
            />

        <ImageView
            android:id="@+id/singleMinusIV"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/input_text_bottom_margin"
            android:background="@drawable/red_shape"
            android:gravity="center"
            android:padding="4dp"
            android:src="@drawable/ic_remove_white_24dp"
            android:textColor="@color/colorWhite"

            />


        <ImageView
            android:id="@+id/singleOrderItemIconIV"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/input_text_bottom_margin"
            android:gravity="center"
            android:padding="4dp"
            android:src="@drawable/ic_tab_shirt_white"
            android:textColor="@color/colorWhite"
            android:visibility="gone"

            />

        <TextView
            android:id="@+id/singleQuantityTV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:maxEms="4"
            android:paddingLeft="@dimen/input_text_bottom_margin"
            android:text="10"
            android:textSize="@dimen/large_text_size"

            />

        <TextView
            android:layout_width="@dimen/price_text_width"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="X"
            android:textSize="@dimen/large_text_size"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Tk. "
            android:textSize="@dimen/regular_text_size"

            />

        <TextView
            android:id="@+id/singlePriceTV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/input_text_bottom_margin"
            android:gravity="center"
            android:text="5"
            android:textSize="@dimen/large_text_size"

            />

        <TextView
            android:layout_width="@dimen/price_text_width"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/input_text_bottom_margin"
            android:gravity="center"
            android:text="="
            android:textSize="@dimen/large_text_size"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Tk. "
            android:textSize="@dimen/regular_text_size"

            />

        <TextView
            android:id="@+id/singleTotalPriceTV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/input_text_bottom_margin"
            android:gravity="center|right"
            android:text="50"
            android:textSize="@dimen/large_text_size"

            />

        <ImageView
            android:id="@+id/singleOrderItemCloseIV"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/input_text_bottom_margin"
            android:gravity="center"
            android:padding="4dp"
            android:src="@drawable/ic_close_black_24dp"
            android:textColor="@color/colorWhite"
            android:visibility="visible"

            />

    </LinearLayout>

    <!--<android.support.v7.widget.AppCompatSeekBar-->
        <!--android:id="@+id/seekbar"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_margin="16dp"-->
        <!--android:max="100"-->
        <!--android:progress="0"/>-->

    </LinearLayout>
</LinearLayout>