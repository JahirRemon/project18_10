<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    >

    <LinearLayout
        android:id="@+id/singleOrderMainLL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/margin_6dp"
        android:background="@color/colorUserCategory"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_vertical_margin"
        android:visibility="visible"
        >

        <TextView
            android:id="@+id/singleOrderDetailsItemNameAndTypeTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:paddingBottom="4dp"
            android:text="@string/user_type"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/regular_text_size"

            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/input_text_bottom_margin"
            android:background="@color/colorWhite"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:gravity="left"
            android:orientation="horizontal"
            >


            <ImageView
                android:id="@+id/singleOrderItemIconIV"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/input_text_bottom_margin"
                android:gravity="center"
                android:padding="4dp"
                android:src="@drawable/ic_tab_shirt_white"
                android:textColor="@color/colorWhite"
                android:visibility="gone"

                />

            <TextView
                android:id="@+id/singleOrderDetailsItemQuantityTV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:maxEms="4"
                android:paddingLeft="@dimen/input_text_bottom_margin"
                android:text="10"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/large_text_size"

                />

            <TextView
                android:layout_width="@dimen/price_text_width"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="X"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/large_text_size"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Tk. "
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/regular_text_size"

                />

            <TextView
                android:id="@+id/singleOrderDetailsRegularPriceTV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="5"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/large_text_size"

                />

            <TextView
                android:layout_width="@dimen/price_text_width"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="="
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/large_text_size"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_toStartOf="@+id/singleOrderDetailsTotalPriceTV"
                    android:gravity="center"
                    android:text="Tk. "
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/regular_text_size"/>

                <TextView
                    android:id="@+id/singleOrderDetailsTotalPriceTV"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/input_text_bottom_margin"
                    android:gravity="center|right"
                    android:text="50"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/large_text_size"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>
</LinearLayout>